<div class="data-form">
  <form
    class="form-signin"
    action="<%= `/subscribers/$subscriber._id/update?_method=PUT` %>"
    method="POST"
  >
    <h2 class="form-signin-heading">Edit subscriber:</h2>
    <label for="inputName">Name</label>
    <input
      type="text"
      name="Name"
      id="inputName"
      class="form-control"
      value="<%= subscriber.name %>"
      placeholder="Name"
      autofocus
    />
    <label for="inputEmail">Email</label>
    <input
      type="email"
      name="email"
      id="inputEmail"
      class="form-control"
      value="<%= subscriber.email %>"
      placeholder="Email"
      required
    />
    <label for="inputZipCode">Zip Code</label>
    <input
      type="text"
      name="zipCode"
      id="inputZipCode"
      class="form-control"
      value="<%= subscriber.zipCode %>"
      placeholder="Zip code"
      required
    />
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>
